@{
  Layout = "_Layout";
}

<h1>List of Specialties</h1>

@{
  if(Model.Count == 0)
  {
    <h3>No Specialty Found</h3>
  }
}
<ul>
  @foreach(var specialty in Model)
  {
    <li><a href="/specialties/@specialty.GetId()">@specialty.GetName()</a></li>
  }
</ul>

<h3><a href="/">Home</a></h3>
<h3><a href="/specialties/new">Add a Specialty</a></h3>
